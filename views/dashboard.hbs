<main class="layout layout__dashboard">

	{{>pageTitleHeader title=(concat "Hi, {{user.first_name}}!")}}

	<section id="searchbar">
		<form action="/search" method="GET" autocomplete="off">
			<i class="icon fa-solid fa-magnifying-glass"></i>
			<label for="search" class="label-hidden">Search for projects</label>

			<input type="text" placeholder="Search for projects..." name="query" id="search">
			<ul class="autocomplete-items"></ul>
		</form>
	</section>

	<section class="action-cards">
		<a class="create-project-card" href="/new-project" id="onboarding_step-6-desktop">+ New project</a>
		<a class="create-project-card" href="/join-project" id="onboarding_step-7-desktop">+ Join project</a>
	</section>

	{{#if projects}}
		<section class="dashboard-section" id="main">
			<h3>All projects</h3>

			<ul class="cards project-cards">
				{{#each projects}}
				<li class="card__item allprojects-card">
					{{> projectCard this}}
				</li>
				{{/each}}
			</ul>
		</section>
	{{else}}
		<section class="dashboard__empty">
			<h3>You don't have any projects yet...</h3>
			<p>Create or join a project by clicking one of the above buttons.</p>
		</section>
	{{/if}}

</main>