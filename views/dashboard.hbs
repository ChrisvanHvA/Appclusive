
<main class="layout layout__dashboard">
	{{#if user.first_name}}
		<h1>Hi, {{user.first_name}}!</h1>
	{{else}}
		<h1>Hi, PIS!</h1>
	{{/if}}

	<ul class="cards project-cards">
		{{!-- todo: check if user is admin (can create projects) --}}
		{{#if true}}
			<li class="card__item admin-card">
				{{> projectCard null}}
			</li>
		{{/if}}

		{{#each projects}}
			<li class="card__item">
				{{> projectCard this}}
			</li>
		{{/each}}
	</ul>
</main>
