<main class='layout layout__join' id="main">

	{{>icons/logo}}

	<form action="/join-project" method="POST" autocomplete="off" autocapitalize="on">
		{{#if general-form-error}}
            <div class="message message--error message--gen" id="code-error">
				<i class="fa-solid fa-triangle-exclamation"></i><p>Are you sure you got the right invite code?</p>
            </div>
        {{/if}}

		 <fieldset class="form__section {{#if code-error.length}} form__error {{/if}}">
            <label for="title">Invite code <span class="required">*</span></label>
            <input
				aria-describedby="code-error" 
				name="code" 
				type="text" 
				minlength="6" 
				maxlength="6" 
				id="code" 
				placeholder="e.g. ABC123"
				required
			>
            <label class="message message--error {{#unless code-error.length}}hide{{/unless}}"><i class="fa-solid fa-triangle-exclamation"></i> {{code-error}}</label>
        </fieldset>

		<button type="submit" class="btn">Join project</button>
		<a href="{{head.backUrl}}">Cancel</a>
	</form>
	
	<div class="dog">
        <img src="images/hulphond_body.svg" alt="Dog image body">
        <img class="desktopDog" src="images/hulphond.svg" alt="Dog image body">
    </div>
</main>