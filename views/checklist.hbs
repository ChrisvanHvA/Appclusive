<main class="layout layout__checklist">

    <section class="checklist">
        <div class="checklist__title">
            <h3>Checklist</h3>
            <p>0/4</p>
        </div>


        <ol>
            {{!-- for each task insert listItem and pass data --}}
            {{#each tasks}}
                {{#each this.items}}
                    {{> listItem this}}
                {{/each}}
            {{/each}}

        </ol>
    </section>

    {{>checklistSidebar}}

</main>