<main class="layout layout__project-create">
    <header class="page-title">
        <div>
            <a href="/" aria-label="back">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5l-7.5-7.5 7.5-7.5"></path>
                </svg>
            </a>
            <h1>Project settings</h1>
        </div>
    </header>
    
    <form method="POST" autocomplete="off" novalidate>
        <label for="title">Project title <span class="required">*</span>
		<span class="formerror">{{#if formErrors.title}}A project title is required{{/if}}</span>
		</label>
        <input
            class="textinput"
            type="text"
            name="title"
            id="title"
            placeholder="What would you like to name your project?"
            value="{{project.title}}"
			required
        />

        <div>
            <label for="description">Project description</label>
            <textarea
                class="textinput"
                name="description"
                id="description"
                placeholder="What is the project about?"
                maxlength="500"
            >{{#if project.description}}{{project.description}}{{/if}}</textarea>
            <small class="description-char-counter"></small>
        </div>

        <fieldset class="project__level">
            <legend>What level of accessibility should be applied? <span class="required">*</span>
			<span class="formerror">{{#if formErrors.level}}An accessibility level is required{{/if}}</span>
			</legend>

            <section>
                <aside>
                    <div role="radiogroup" aria-labelledby="level-label">
                        <input type="radio" id="a" name="level" value="A" role="radio" required {{#if (eq project.wcag_level "A")}}checked{{/if}} />
                        <label for="a" id="level-label">
                            <h3>Level A: Essential</h3>
                            <p>If this isn't met, assistive technology may not be able to read, understand, or fully operate the page or view.</p>
                        </label>
                    </div>

                    <div role="radiogroup" aria-labelledby="level-label">
                        <input type="radio" id="aa" name="level" value="AA" role="radio" required {{#if (eq project.wcag_level "AA")}}checked{{/if}} />
                        <label for="aa" id="level-label">
                            <h3>Level AA: Ideal Support</h3>
                            <p>Required for multiple government and public body websites. 'Appclusive' strives for AA compliance.</p>
                        </label>
                    </div>

                    <div role="radiogroup" aria-labelledby="level-label">
                        <input type="radio" id="aaa" name="level" value="AAA" role="radio" required {{#if (eq project.wcag_level "AAA")}}checked{{/if}} />
                        <label for="aaa" id="level-label">
                            <h3>Level AAA: Specialized Support</h3>
                            <p>This is typically reserved for parts of websites and web apps that serve a specialized audience.</p>
                        </label>
                    </div>
                </aside>
            </section>
        </fieldset>

        <button class="btn">Save changes</button>
    </form>
</main>