{{#if (ne this null)}}
    <a href="/categories" draggable="false">
        <header>
            <img
                src="https://fastly.picsum.photos/id/820/40/40.jpg?hmac=kZkyBeRLe53RBNNVxzfiC2csALM9zByR2aPHGRtIBpo"
                alt="a"
            />
            <div>
                <h3>{{this.name}}</h3>
                <div class="status {{toLowerCase this.status}}">

                    {{#if (eq (toLowerCase this.status) "new")}}
						{{> icons/bolt}}
                    {{else if (eq (toLowerCase this.status) "wip")}}
						{{> icons/clock}}
                    {{else}}
						{{> icons/check-border}}
                    {{/if}}

                    <p>{{this.status}}</p>
                </div>
            </div>
        </header>

        <section class="project-data">
            <div class="step">
                <h4>Step</h4>
                <p>{{this.step}}</p>
            </div>
            <div class="checklists">
                <h4>Checklists</h4>
                <p>{{this.completedChecklists}} / {{this.checkLists.length}}</p>
            </div>

            <div class="team-members">
                <h4>Members</h4>
                <span>

                    {{#each this.teamMembers}}
                        <img
                            src={{this.imgUrl}}
                            title={{this.name}}
                            alt={{this.name}}
                        />
                    {{/each}}
                </span>
            </div>
        </section>

        <section class="projectCard__progress">
            <progress class="progress"
                value={{round
                    (multiply
                        (divide this.completedChecklists this.checkLists.length)
                        100
                    )
                }}
                min="0"
                max="100"
            ></progress>
            {{! <3 handlebars }}
            <div>
                <p>{{round
                    (multiply
                        (divide this.completedChecklists this.checkLists.length)
                        100
                    )
                }}% accessible</p>
                <p>{{this.completedChecklists}} / {{this.checkLists.length}}</p>
                {{> icons/arrowright}}
            </div>
        </section>
    </a>

{{else}}
    <a href="/new-project">+ New project</a>
{{/if}}