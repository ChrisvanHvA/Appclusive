<li class="category__item">
    <label aria-label="Info about category" class="category__item__info" for="{{this.title}}flip">{{>icons/info}}</label>
    <input id="{{this.title}}flip" type="checkbox">
    <a href="categories/{{this.title}}">
        <div class="category__item__back">
            <p>{{this.description}}</p>
        </div>  
        <div class="category__item__front">
            <img src="/images/image.svg" alt="image icon">
            <div class="category__item__content">
                <div>
                    <h2>{{this.title}}</h2>
                    <img src="/images/nextArrow.svg" alt="next arrow">
                </div>
                
                <progress class="progress" value="33" min="0" max="100"></progress>

                <div>
                    <p class="category__acc">33% <span>accessible</span></p>
                    <p>1/3</p>
                </div>
            </div>
        </div>
    </a>
</li>