<li class='checklist__item'>
    <form action="/" method="post">
        <input class="checklist__checkbox" type='checkbox' id={{wcag_item_id}} name={{wcag_item_id}} value={{wcag_item_id}} />
        <label for={{wcag_item_id}}></label>
        <div class='checklist__content'>
            <h4>{{wcagTitle}}</h4>
            <p>{{{title}}}</p>

            {{!-- if tips, details --}}

            <details>
                <summary>
                    <p>
                        {{>icons/plus}}
                        {{>icons/minus}}
                        Tip</p>
                </summary>
                <p>{{{wcagText}}}</p>
                <a class="checklist__source" href={{wcagHref}}>Official WCAG website</a>
            </details>

            {{#if users}}
            <div class='checklist__users'>

                {{#if (gt users.length 2)}}
                {{#each users}}
                {{#if (lt @index 2)}}
                <figure>
                    <img src='https://unsplash.it/40/40' alt='' />
                </figure>
                {{/if}}
                {{/each}}
                <span>+{{subtract users.length 3}}</span>
                {{else}}
                {{#each users}}
                <figure>
                    <img src='https://unsplash.it/40/40' alt='' />
                </figure>
                {{/each}}
                {{/if}}

            </div>
            {{/if}}
        </div>
    </form>
</li>