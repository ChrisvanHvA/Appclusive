<li class='checklist__item'>
        <input type='checkbox' id='check1' name='check1' value='check1' />
        <label for='check1'></label>
    <div class='checklist__content'>
        <h4>{{name}}</h4>
        <p>{{description}}</p>

        {{!-- if tips, details --}}

        {{#if tips}}
            <details>
                <summary>
                    <p>Tips & Tricks</p>
                </summary>
                <ul>
                    {{#each tips}}
                        <li>{{this.content}}</li>
                    {{/each}}
                </ul>
            </details>
        {{/if}}

        {{#if users}}
            <div class='checklist__users'>

                {{#if (gt users.length 2)}}
                    {{#each users}}
                        {{#if (lt @index 2)}}
                            <figure>
                                <img src='https://unsplash.it/40/40' alt='' />
                            </figure>
                        {{/if}}
                    {{/each}}
                    <span>+{{subtract users.length 3}}</span>
                {{else}}
                    {{#each users}}
                        <figure>
                            <img src='https://unsplash.it/40/40' alt='' />
                        </figure>
                    {{/each}}
                {{/if}}
                
            </div>
        {{/if}}
    </div>
</li>